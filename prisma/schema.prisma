datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String   @id @default(uuid())
  email String   @unique
  name  String?
  schedules Schedule[]
}

model Schedule {
  id        String   @id @default(uuid())
  title     String
  date      DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
